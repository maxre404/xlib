    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name="com.ok.uiframe.App"
        android:theme="@style/Theme.Xlib"
        >
<!--        android:theme="@style/Theme.Xlib"-->
        <activity
            android:name="com.ok.uiframe.activity.SpinWheelActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="true"
            android:label="@string/title_activity_spin_wheel"
            android:theme="@style/Theme.Xlib.Fullscreen">

        </activity>
        <activity android:name="com.ok.uiframe.activity.VideoTestActivity"
            android:exported="true"
            android:theme="@style/AppTheme"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name="com.ok.uiframe.activity.TrendChartActivity"
            android:exported="true"/>
        <activity
            android:name="com.ok.uiframe.activity.CoordinatorLayoutActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ok.uiframe.activity.RecyclerViewAnimationActivity"
            android:exported="true"/>
        <activity
            android:name="com.ok.uiframe.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Xlib.NoActionBar">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name="com.ok.uiframe.NextActivity"
            android:exported="true"/>
        <activity
            android:name="com.ok.uiframe.MultiProcessActivity"
            android:launchMode="singleTop"
            android:process=":remote" />
    </application>

</manifest>